<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LikesFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fav_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favourites"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-6dp"
            android:fontFamily="@font/raleway"
            android:lineHeight="23sp"
            android:text="@string/favourites"
            android:textAppearance="@style/favourites"
            android:textFontWeight="700" />

        <View
            android:id="@+id/line_2"
            android:layout_width="411.02dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/line_2" />

        <TextView
            android:id="@+id/favourites2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:textSize="15dp"
            android:text="Danh sách yêu thích"
            android:textAppearance="@style/favourites" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_likeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>