<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_sheet_buy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgPhoto_Place"
                android:layout_width="180dp"
                android:layout_height="180dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnCloseBottomSheetDialog"
                    android:layout_gravity="end"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_close"/>
                <TextView
                    android:id="@+id/txtInfoPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin: "
                    android:textColor="#3F51B5" android:textSize="15sp"/>
                <TextView
                    android:id="@+id/txtDesPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Miêu tả: "
                    android:textColor="@color/black"
                    android:textSize="9sp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lựa chọn:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <ImageButton
                    android:id="@+id/btnGoogleMap"
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/google_maps"/>
                <ImageButton
                    android:layout_margin="10dp"
                    android:id="@+id/btnWiki"
                    android:layout_weight="0.13"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/wikipedia"/>
                <ImageButton
                    android:layout_margin="13dp"
                    android:id="@+id/btnLike"
                    android:layout_weight="0.12"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@drawable/unlike_background"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>