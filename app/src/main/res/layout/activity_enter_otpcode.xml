<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/google_pixe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"

        android:paddingRight="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_backEnterCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="32dp"
                android:gravity="top"
                android:text="Đăng nhập"
                android:textAppearance="@style/login"
                android:textFontWeight="700" />

        </RelativeLayout>


        <TextView
            android:id="@+id/hi_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="44dp"
            android:gravity="top"
            android:text="Chào, +84868387831"
            android:textAppearance="@style/howdy_user_"
            android:textFontWeight="800" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_OTP_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="59dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/enter_number_rect"
            android:hint="Nhập mã OTP"
            android:textAlignment="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resend"
            android:layout_width="250dp"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_google"
            android:fontFamily="@font/raleway"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="Gửi lại"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_login2"

            android:textAlignment="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/otp_signIn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:width="246dp"
            android:height="47dp"
            android:background="@drawable/rectangle_3"
            android:drawableLeft="@drawable/ic_otp2"
            android:elevation="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingRight="30dp"
            android:paddingBottom="12dp"
            android:text="Đăng nhập"
            android:textAppearance="@style/sign_in_with_otp"
            android:textColor="#ffffff" />


    </LinearLayout>

</RelativeLayout>