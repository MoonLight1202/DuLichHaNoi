<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent"
    android:padding="60dp">
    <TextView
        android:padding="20dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Đánh giá"
        android:fontFamily="@font/raleway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Vui lòng đánh giá để chúng tôi cải thiện chất lượng"
        android:fontFamily="@font/raleway"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
        android:id="@+id/oneStar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_star_rate"/>
        <ImageView
            android:id="@+id/twoStar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_star_rate"/>
        <ImageView
            android:id="@+id/threeStar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_star_rate"/>
        <ImageView
            android:id="@+id/fourStar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_star_rate"/>
        <ImageView
            android:id="@+id/fiveStar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_star_rate"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHuy"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radius_google"
            android:text="Huỷ"/>
        <View
            android:layout_width="10dp"
            android:layout_height="45dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGui"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radius_otp"
            android:text="Gửi"/>
    </LinearLayout>

</LinearLayout>
